---
export function getStaticPaths({paginate}) {
  const data = Astro.fetchContent('../post/**/*.md');
  return paginate(data, {pageSize: 1, param: 'customParamName'});
}
const { page } = Astro.props;
---

<html>
  <head>
    <title>All Posts</title>
  </head>
  <body>
    <main class="wrapper">
      <h2 class="title">All Posts</h2>
      <small class="count">{page.start + 1}â€“{page.end + 1} of {page.total}</small>
      {page.data.map((post) => <div>{post.title}</div>)}
    </main>
    <footer>
      <nav class="nav">
        <a class="prev" href={page.url.prev || '#'} aria-label="Previous Page">Prev</a>
        <a class="next" href={page.url.next || '#'} aria-label="Next Page">Next</a>
      </nav>
    </footer>
  </body>
</html>
